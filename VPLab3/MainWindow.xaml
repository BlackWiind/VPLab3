<Window x:Class="VPLab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPLab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500" Loaded="TestView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Faculty" AutoGenerateColumns="True" ></DataGrid>
        <DataGrid x:Name="Group" AutoGenerateColumns="True" Grid.Row="1"></DataGrid>
        <DataGrid x:Name="Students" AutoGenerateColumns="True" Grid.Row="2"></DataGrid>
    </Grid>
</Window>
